# Test Environment Variables for Backend Tests
NODE_ENV=test
PORT=8080
API_PREFIX=/api/v1
LOG_LEVEL=error

# Test Database (using Docker postgres)
DB_HOST=localhost
DB_PORT=5433
DB_USER=devuser
DB_PASSWORD=devpassword
DB_NAME=se100_test_db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# JWT Settings for tests
JWT_SECRET=test-jwt-secret-key-for-local-testing
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS
CORS_ORIGINS=http://localhost:3000

# Cloudinary (not needed for most tests, can be dummy values)
CLOUDINARY_CLOUD_NAME=test
CLOUDINARY_API_KEY=test
CLOUDINARY_API_SECRET=test
