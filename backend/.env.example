# ==============================================================================
# REAL ESTATE MANAGEMENT SYSTEM - Backend Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!
# ==============================================================================

# ----- Node Environment -----
NODE_ENV=development
PORT=8080
API_PREFIX=/api/v1
LOG_LEVEL=info

# ----- Database (PostgreSQL) -----
# Option 1: Individual variables (recommended for development)
DB_HOST=localhost
DB_PORT=5433
DB_USER=devuser
DB_PASSWORD=devpassword
DB_NAME=se100_dev_db
DB_POOL_MIN=2
DB_POOL_MAX=10


# Option 2: Connection URL (optional, overrides individual vars if set)
# DATABASE_URL=postgresql://devuser:devpassword@localhost:5433/se100_dev_db

# Enable SSL for cloud/staging (Render, Heroku, etc.)
DB_SSL=true

# ----- JWT Authentication -----
# Generate secrets: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRE=30d

# ----- File Upload -----
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ----- Cloudinary (File Storage) -----
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ----- CORS -----
# Comma-separated list of allowed origins (leave empty for development)
CORS_ORIGINS=http://localhost:3000
